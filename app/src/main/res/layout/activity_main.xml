<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gredient_background_for_main_activity"
    tools:context="essential.app.run.activity.MainActivity">

    <ImageButton
        android:id="@+id/button_start_run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@null"
        android:contentDescription="@string/start_run"
        android:src="@drawable/button_start_run" />

    <LinearLayout
        android:layout_above="@id/button_start_run"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/total_kilometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/avenir_next_demi_bold"
                android:maxLines="1"
                android:text="10"
                android:textColor="#000000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/total_kilometer_static"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/total_kilometer"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-3dp"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="1"
                android:text="@string/total_km"
                android:textColor="#727578"
                android:textSize="12sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/avenir_next_demi_bold"
                android:maxLines="1"
                android:text="10"
                android:textColor="#000000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/total_time_static"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/total_time"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-3dp"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="1"
                android:text="@string/total_hours"
                android:textColor="#727578"
                android:textSize="12sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/total_pace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/avenir_next_demi_bold"
                android:maxLines="1"
                android:text="10"
                android:textColor="#000000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/total_pace_static"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/total_pace"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-3dp"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="1"
                android:text="@string/avg_pace"
                android:textColor="#727578"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/run_history"
        android:layout_width="wrap_content"
        android:background="@drawable/white_button_background"
        android:text="@string/run_history"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="#000000"
        android:fontFamily="@font/avenir_next_demi_bold"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/back_up_data"
        android:layout_width="wrap_content"
        android:background="@drawable/white_button_background"
        android:text="@string/back_up"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/run_history"
        android:layout_marginTop="50dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="#000000"
        android:fontFamily="@font/avenir_next_demi_bold"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content" />

</RelativeLayout>
