<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_kilometer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000000"
        android:layout_weight="1">

        <TextView
            android:id="@+id/distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="-15dp"
            android:fontFamily="@font/din_considred"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="00.00"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="130sp" />

        <TextView
            android:id="@+id/activity_run_static_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/din_considred"
            android:gravity="center"
            android:text="KILOMETERS"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:id="@+id/viewline1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#444444" />

    <RelativeLayout
        android:id="@+id/layout_avg_pace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000000"
        android:layout_weight="1">

        <TextView
            android:id="@+id/paceAvagrage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="-15dp"
            android:fontFamily="@font/din_considred"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="00'00"
            android:textAllCaps="true"
            android:textColor="@color/brand_color"
            android:textSize="130sp" />

        <TextView
            android:id="@+id/paceStatic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/din_considred"
            android:gravity="center"
            android:text="AVG PACE"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:id="@+id/viewline2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#444444" />

    <RelativeLayout
        android:id="@+id/layout_duration"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff">

        <TextView
            android:id="@+id/duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="-15dp"
            android:fontFamily="@font/din_considred"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="00:00"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="130sp" />

        <TextView
            android:id="@+id/durationStatic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/din_considred"
            android:gravity="center_horizontal"
            android:text="TOTAL TIME"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="18sp" />

    </RelativeLayout>

    <View
        android:id="@+id/viewline3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#000000" />

    <RelativeLayout
        android:id="@+id/all_buttons_layout"
        android:layout_width="190dp"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="1.01"
        android:background="#ffffff">


        <TextView
            android:id="@+id/textViewPause"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_with_stroke_only"
            android:fontFamily="@font/avenir_next_heavy_italic"
            android:gravity="center"
            android:text="PAUSE"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:textStyle="bold|italic"
            android:visibility="visible" />


        <TextView
            android:id="@+id/textViewStop"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:background="@drawable/black_solid_circle"
            android:fontFamily="@font/avenir_next_heavy_italic"
            android:gravity="center"
            android:text="STOP"
            android:textColor="#ff697a"
            android:textSize="17sp"
            android:textStyle="bold|italic"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewRun"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/black_solid_circle"
            android:fontFamily="@font/avenir_next_heavy_italic"
            android:gravity="center"
            android:text="RUN"
            android:textColor="#86d64f"
            android:textSize="17sp"
            android:textStyle="bold|italic"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
